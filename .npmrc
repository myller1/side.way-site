# Configurações para resolver problemas com dependências opcionais do Rollup
optional=false
fund=false
audit=false

# Força a instalação de dependências mesmo com problemas de plataforma
force=false
legacy-peer-deps=false

# Configurações específicas para Vercel
production=false
include=dev

# Evita problemas com dependências opcionais específicas de plataforma
ignore-optional=true

# Configurações adicionais para estabilidade na Vercel
install-strategy=shallow
prefer-offline=false
cache-max=0

# Configurações específicas para Rollup
@rollup:registry=https://registry.npmjs.org/

# Evita problemas com dependências de plataforma específica
target_platform=linux
target_arch=x64